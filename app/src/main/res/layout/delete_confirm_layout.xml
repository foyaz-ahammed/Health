<?xml version="1.0" encoding="utf-8"?>

<org.secuso.privacyfriendlyactivitytracker.layout.ConfirmLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/delete_confirm"
    android:clipToPadding="true"
    android:clipChildren="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:layout_marginBottom="30dp"
    android:background="@drawable/round_rect_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/delete_data_desc"
        android:gravity="center_horizontal"
        android:textSize="17sp"
        android:textColor="@android:color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        >

        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".40"
            android:layout_marginStart="5dp"
            style="?android:attr/borderlessButtonStyle"
            android:clickable="true"
            android:text="@string/dialog_cancel"
            android:textSize="16sp"
            android:textColor="@color/dialog_button_color"
            android:focusable="true" />

        <View android:layout_width="1dip"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:background="#d3d3d3" />

        <Button
            android:id="@+id/ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".40"
            android:layout_marginEnd="5dp"
            style="?android:attr/borderlessButtonStyle"
            android:clickable="true"
            android:text="@string/dialog_confirm"
            android:textSize="16sp"
            android:textColor="@color/dialog_button_color"
            android:focusable="true" />

    </LinearLayout>

</org.secuso.privacyfriendlyactivitytracker.layout.ConfirmLayout>