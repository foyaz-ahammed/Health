<?xml version="1.0" encoding="utf-8"?>
<org.secuso.privacyfriendlyactivitytracker.layout.TypeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/type_select_area"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >

        <LinearLayout
            android:id="@+id/weight_select_area"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:background="@drawable/shadow_background"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/weight_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_weight_title"
                android:textColor="@android:color/white"
                />

            <LinearLayout
                android:id="@+id/weight_range_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/weight_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/weight_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/kilogram" />

            </LinearLayout>

            <TextView
                android:id="@+id/weight_empty_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="@string/empty_value"
                android:textColor="@color/white"
                android:visibility="gone"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fat_rate_select_area"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:background="@drawable/shadow_white_background"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/fat_rate_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/body_fat_rate"
                android:textColor="@color/black"
                />

            <LinearLayout
                android:id="@+id/fat_rate_range_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/fat_rate_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/fat_rate_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/percent"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/fat_rate_empty_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="@string/empty_value"
                android:visibility="gone"
                />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/changes"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_weight_title"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/weight_diff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/empty_value"
                android:gravity="center_horizontal"/>

        </LinearLayout>

        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/body_fat_rate"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/fat_rate_diff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/empty_value"
                android:gravity="center_horizontal"
                />

        </LinearLayout>

    </LinearLayout>

</org.secuso.privacyfriendlyactivitytracker.layout.TypeLayout>