<?xml version="1.0" encoding="utf-8"?>
<org.secuso.privacyfriendlyactivitytracker.mainItems.MainWaterContainer
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/main_water_background"
    android:padding="20dp"
    android:onClick="onClick">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="@string/main_water_title"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_water_desc"
        android:textSize="10sp"
        />

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/visual_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <com.sasank.roundedhorizontalprogress.RoundedHorizontalProgressBar
            android:id="@+id/water_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:maxHeight="10dp"
            android:minHeight="10dp"
            android:progress="0"
            app:backgroundColor="#ECECEC"
            app:progressColor="@android:color/holo_blue_light" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/value_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-condensed"
            />

        <TextView
            android:id="@+id/unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/glasses"/>

    </LinearLayout>

</org.secuso.privacyfriendlyactivitytracker.mainItems.MainWaterContainer>