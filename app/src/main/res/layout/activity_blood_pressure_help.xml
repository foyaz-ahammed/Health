<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".blood.BloodPressureHelpActivity">

    <include
        layout="@layout/toolbar" />

    <TextView
        style="@style/CycleHelpStyle.TitleStyle"
        android:layout_marginStart="@dimen/layout_margin_h"
        android:layout_marginEnd="@dimen/layout_margin_h"
        android:layout_marginBottom="20dp"
        android:text="@string/main_blood_pressure_title" />

    <TextView
        style="@style/CycleHelpStyle"
        android:layout_marginStart="@dimen/layout_margin_h"
        android:layout_marginEnd="@dimen/layout_margin_h"
        android:textSize="15sp"
        android:text="@string/blood_help_desc"/>

</LinearLayout>