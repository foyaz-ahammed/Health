<?xml version="1.0" encoding="utf-8"?>
<org.secuso.privacyfriendlyactivitytracker.mainItems.MainBloodPressureContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/main_blood_pressure_background"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="@string/main_blood_pressure_title"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_blood_pressure_desc"
        android:textSize="10sp"
        />

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/visual_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1"
        >

        <org.secuso.privacyfriendlyactivitytracker.utils.TriangularIndicatorBar
            android:id="@+id/indicator_bar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:enable_level_text="false"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/value_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-condensed"
            />

        <TextView
            android:id="@+id/unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/millimeter_of_mercury"
            />

    </LinearLayout>

</org.secuso.privacyfriendlyactivitytracker.mainItems.MainBloodPressureContainer>